<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ErshadatActivity">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      tools:context=".ui.ErshadatActivity"
      >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="341dp"
        android:layout_height="69dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:srcCompat="@drawable/ebd2"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="407dp"
        android:layout_height="101dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:srcCompat="@drawable/ed8at"
        />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:srcCompat="@drawable/rrr"
        />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:text="سوف تظهر لك اختياراتك و تحدياتك فى صفحة المقدمة . إذا أتممت اليوم اضغط مكان السهم .. إذا أردت أن تمسح تحد من التحديات قم بسحب الكارت إلي جهة اليمين أو اليسار ثم اضغط نعم أو أضفه إلي إنجازاتك بالضغط علي إضافة إلي انجازاتي...تأكد من عدم إضافة نفس التحدي أكثر من مرة إلا بعد إضافته إلي الإنجازات أو مسحه..إذا أردت مثلا أن يكون هناك نفس التحدي أكثر من مرة اضغط خاص بي و اعطه اسما مختلفا مثلا: الضحي2"
        android:textAlignment="center"
        android:textColor="#680E0E"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="4dp"
        android:padding="8dp"
        android:text="هذا البرنامج يساعدك علي بناء عبادات و عادات تستمر معك طوال عمرك , ويساعدك أيضا علي التخلص من الذنوب و المعاصي التي تجعل الانسان عبدا لنفسه متبعا هواه ثقيل النفس...سائلين الله أن يجعله في ميزان حسناتنا جميعا..اللهم امين....اضغط علي زرخاص بي إذا أردت أن تضيف عبادة أو عادة أو مهمة خاصة بك و ليست موجودة بالبرنامج... اختر استقامة جديدة و قم بادخال عدد أيام التحدى ثم اضغط ابدأ.. "
        android:textAlignment="center"
        android:textColor="#680E0E"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:padding="8dp"
        android:text="يمكنك متابعة التقييم بالضغط على التحدى المعروض فى صفحة المقدمة"
        android:textAlignment="center"
        android:textColor="#680E0E"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lalezar_fegular"
        android:padding="8dp"
        android:text="مرحبا بك في استقم !"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

  </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>